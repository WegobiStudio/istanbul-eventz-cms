@using Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.Models.Blocks;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<IPublishedContent>
@{
    Layout = "master.cshtml";
    var officeCards = Model.Value<IEnumerable<BlockListItem>>("officeCards")?.Select(x => x.Content);

    
}

<div class="contact-us-page">
    <div class="contact-us">
        <div class="page-title-container">
            <h2>@(Model.Value<string>("pageTitle"))</h2>
            <div>
                <span>@(Model.Value<string>("pageSubtitle"))</span>
                <p class="support-text">@(Model.Value<string>("pageDescription"))</p>
            </div>
        </div>

        <div class="contact-area">
            <div class="contact-area-offices">
                @if (officeCards != null)
                {
                    foreach (var office in officeCards)
                    {
                        var phoneNumber = office.Value<string>("phoneNumber");
                        var phoneLink = $"tel:{phoneNumber?.Replace(" ", "")}";
                    <div class="office-item">
                        <h4>@office.Value("officeName")</h4>
                        <div class="item">
                            <a href="#">
                                <div class="icon">
                                    <svg width="32" height="33" viewBox="0 0 32 33" fill="none"
                                        xmlns="http://www.w3.org/2000/svg">
