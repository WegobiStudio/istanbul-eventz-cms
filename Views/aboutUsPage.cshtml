@using Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.Models.Blocks;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<IPublishedContent>

@{
    Layout = "master.cshtml";
    var missionText = Model.Value<string>("missionText");
    var visionText = Model.Value<string>("visionText");
    var galleryImages = Model.Value<IEnumerable<IPublishedContent>>("galleryImages");
    var experienceCards = Model.Value<IEnumerable<BlockListItem>>("experienceCards")?.Select(x => x.Content);
    var companyValues = Model.Value<IEnumerable<BlockListItem>>("companyValueCards")?.Select(x => x.Content);
}

<div class="about-us">
   <div class="page-title-container">
      <h2>@(Model.Value<string>("pageTitle"))</h2>
      <div>
         <span>@(Model.Value<string>("pageSubtitle"))</span>
         <p class="support-text">@(Model.Value<string>("pageDescription"))</p>
      </div>
   </div>
   
   <div class="big-image">
      <img src="@(Model.Value<IPublishedContent>("mainImage")?.Url() ?? "#")" alt="">
   </div>
   
   <div class="ms-vs-container">
      <div>
         <h5>Mission</h5>
         <span class="support-text">@missionText</span>
      </div>
      <div>
         <h5>Vision</h5>
         <span class="support-text">@visionText</span>
      </div>
   </div>
   
   <div class="section-divider"></div>

   <div class="quote-container">
      <div class="quote-inner">
         <div class="quote-content">
