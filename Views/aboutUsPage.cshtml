                </svg>
            </div>
         </div>
         <h6 class="writer">@(Model.Value<string>("founderName"))</h6>
      </div>
   </div>
   
   <div class="gallery-images-grid">
      @if (galleryImages != null)
      {
          foreach (var image in galleryImages)
          {
              <div class="image">
                  <img src="@(image.Url() ?? "#")" alt="">
              </div>
          }
      }
   </div>
   
   <div class="experience-section">
      <span class="text">@(Model.Value<string>("experienceText"))</span>
      <div class="experience-cards">
         @if (experienceCards != null)
         {
             foreach (var card in experienceCards)
             {
                 <div class="experience-cards-item">
                    <div class="counter">@(card.Value<string>("counter"))</div>
                    <span>@(card.Value<string>("description"))</span>
                 </div>
             }
         }
      </div>
   </div>
   
   <div class="home-cards">
      @if (companyValues != null)
      {
          foreach (var card in companyValues)
          {
              <div class="home-cards-item">
                  <div class="top">
                      <div class="icon">
                          <img src="@(card.Value<IPublishedContent>("icon")?.Url() ?? "#")" alt="@(card.Value<string>("title"))">
                      </div>
                      <span class="title">@(card.Value<string>("title"))</span>
                  </div>
                  <div class="content">
                      <span>@(card.Value<string>("description"))</span>
                  </div>
              </div>
          }
      }
   </div>
</div>